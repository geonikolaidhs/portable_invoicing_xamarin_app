                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtStoreName"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="3"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
                                            <Label
                                                x:Name="lblTotalDiscount"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtTotalDiscount"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="4"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
                                            <Label
                                                x:Name="lblTotalBeforeDiscount"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtTotalBeforeDiscount"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="5"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
                                            <Label
                                                x:Name="lblTotalProductsNumber"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtTotalProductsNumber"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="6"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
                                            <Label
                                                x:Name="lblTotalVat"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtTotalVat"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="7"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
                                            <Label
                                                x:Name="lblFinalAmount"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Label
                                                x:Name="txtFinalAmount"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontAttributes="Bold"
                                                FontSize="22"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="8"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                x:Name="lblDocumentStatus"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Picker
                                                x:Name="pckDefaultDocumentStatus"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="17"
                                                HorizontalOptions="FillAndExpand"
                                                SelectedIndexChanged="setDocumentStatus"
                                                TextColor="#000000"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="9"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                x:Name="lblDate"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <DatePicker
                                                x:Name="pckDate"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="17"
                                                VerticalOptions="Center">
                                                <DatePicker.Format>dd-MM-yyyy</DatePicker.Format>
                                            </DatePicker>
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="10"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                x:Name="lblVehicleNumber"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Entry
                                                x:Name="txtVehicleNumber"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                Focused="VehicleNumberFocused"
                                                FontSize="17"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                Unfocused="VehicleNumberUnFocused"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="11"
                                        Padding="2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                x:Name="lblRemarks"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="WhiteSmoke"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                            <Entry
                                                x:Name="txtRemarks"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                Focused="RemarksFocused"
                                                FontSize="17"
                                                HorizontalOptions="FillAndExpand"
                                                TextChanged="setRemarks"
                                                TextColor="#000000"
                                                Unfocused="RemarksUnFocused"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
