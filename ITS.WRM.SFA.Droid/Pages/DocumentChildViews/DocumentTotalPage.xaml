                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:ImageButton
                                        x:Name="btnSave"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        BackgroundColor="#2196F3"
                                        Clicked="OnSave"
                                        HeightRequest="50"
                                        TextColor="WhiteSmoke" />
                                    <controls:ImageButton
                                        x:Name="btnSaveSend"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        BackgroundColor="#2196F3"
                                        Clicked="OnSaveSend"
                                        HeightRequest="50"
                                        TextColor="WhiteSmoke" />
                                    <controls:ImageButton
                                        x:Name="btnSentPrint"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        BackgroundColor="#2196F3"
                                        Clicked="OnSavePrint"
                                        HeightRequest="50"
                                        TextColor="WhiteSmoke" />
