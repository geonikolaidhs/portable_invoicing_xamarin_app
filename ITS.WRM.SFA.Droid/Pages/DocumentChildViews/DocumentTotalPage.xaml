                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                x:Name="lblDeliveryAddress"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="2,2,2,2"
                                                BackgroundColor="#01abdf"
                                                FontSize="17"
                                                HeightRequest="50"
                                                TextColor="WhiteSmoke"
                                                YAlign="Center" />
                                            <Entry
                                                x:Name="txtDeliveryAddress"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                Focused="DeliveryAddressFocused"
                                                FontSize="17"
                                                HorizontalOptions="FillAndExpand"
                                                TextChanged="setDeliveryAddress"
                                                TextColor="#000000"
                                                Unfocused="DeliveryAddressUnFocused" />
                                        </Grid>
                                    </StackLayout>
