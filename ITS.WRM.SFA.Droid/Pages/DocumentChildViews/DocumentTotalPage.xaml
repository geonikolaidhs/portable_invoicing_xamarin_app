                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5,5,5,5"
                                                BackgroundColor="#ecebeb"
                                                FontSize="17"
                                                HeightRequest="50"
                                                HorizontalOptions="FillAndExpand"
                                                TextColor="#000000"
                                                VerticalOptions="Center"
                                                YAlign="Center" />
                                        </Grid>
                                    </StackLayout>

                                    <StackLayout
                                        Grid.Row="2"
                                        Padding="2,0,0,2"
                                        Spacing="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                            </Grid.ColumnDefinitions>
                                            <BoxView
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                BackgroundColor="#bfbcbc"
                                                HeightRequest="1"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="End" />
